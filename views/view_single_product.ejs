<%- include('includes/admin_header') %>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

  <!-- Main Content -->
  <div id="content">
    <%- include('./includes/flash') %>

     <!-- Topbar -->
     <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

      <!-- Sidebar Toggle (Topbar) -->
      <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
        <i class="fa fa-bars"></i>
      </button>

       <!-- Topbar Navbar -->
       <ul class="navbar-nav ml-auto">
        <div class=" bg-white rounded">
            <p class="font-weight-bold">
              <%= user  %> 

            </p>
        </div>
    </ul>
 
    </nav>
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container-fluid" id="singleProduct">

      <!-- Page Heading -->
      <h1 class="h3 mb-4 text-gray-800" >Update Farm Product: <span id="showTitle" ><strong><%= product.name %></strong></span>  </h1>
     

      <!-- General settings-->
      <section class="settings">
        <div class="row">
          <div class="col-md-6">
             
             <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Product General Settings</h6>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col">
                    <p ><strong>Name:</strong> </p>
                    <p ><strong>Category:</strong> </p>
                    <p ><strong> Updated:</strong> </p>
  
                  </div>
                  <div class="col">
                    <p id="showName" ><strong><%= product.name %></strong> </p>
                    <p id="showCat"><strong><%= product.catName %></strong> </p>
                    <p id="showCreatedDate"><strong><%= product.createdDate.getMonth() + 1 %>/<%= product.createdDate.getDate() %>/<%= product.createdDate.getFullYear() %> </strong></p>
  
                  </div>
                </div>
                
               
              
              </div>
            </div>


          </div>
          <div class="col-md-6">
             
            <div class="card shadow mb-4">
             <div class="card-header py-3">
               <h6 class="m-0 font-weight-bold text-primary">Appearance and Description</h6>
             </div>
             <div class="card-body">
               <p id="showDesc"> 
                <%= product.desc %>
               </p>
             </div>
           </div>


         </div>

        </div>
      </section>

      <!-- General settings-->
      <section class="">
        <form id="mainEditForm">
        <!-- Content Row -->
        <div class="row">
          
          <!-- Earnings (Monthly) Card Example -->
          <div class="col-md-3 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Product Name</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                     
                        <div class="form-group row">
                          <div class="col">
                            <input type="text" disabled class="form-control text-muted" id="editName" value="<%= product.name %>">
                          </div>
                        </div>
                      

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-md-3 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Product Rate</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      
                        <div class="form-group row">
                          <div class="col">
                            <input type="text" class="form-control" id="editRate" value="<%= product.rate %>">
                          </div>
                        </div>
                      

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-md-3 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Discount Rate</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                     
                        <div class="form-group row">
                          <div class="col">
                            <input type="text" class="form-control" id="editDiscount" value="<%= product.discount %>">
                          </div>
                        </div>
                     

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pending Requests Card Example -->
          <div class="col-md-3 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Product Inventory</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <div class="form-group row">
                          <div class="col">
                            <input type="text" class="form-control" id="editQuantity" value=<%= product.quantity %>>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <!-- Pending Requests Card Example -->
        <div class="col-md-3 mb-4">
          <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Product Category</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800">
                      <div class="form-group row">
                        <div class="col">
                          <input type="text" class="form-control" id="editCat" value="<%= product.catName %>" >
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-md-3 mb-4">
          <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Product Location</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800">
                      <div class="form-group row">
                        <div class="col">
                          <input type="text" class="form-control" id="editLocation" value="<%= product.location %>">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <input type="hidden" name="productId" value="<%= product._id %>">
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        
        </div>
      </form>
      </section>

       <!-- General settings-->
       <section class="settings">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-5 mb-4">

                <!-- Project Card Example -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Description</h6>
                  </div>
                  <div class="card-body">
                   
                      <div class="form-group">
                      
                        <textarea class="form-control" id="editDesc" rows="10">
                          <%= product.desc %>
                        </textarea>
                      </div>
                   
                  </div>
                </div>
                
    
          
              </div>

              <div class="col-md-7 mb-4">

                <!-- Illustrations -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Main Image</h6>
                  </div>
                  <div class="card-body">
                    <div class="text-center">
                      <img  class="img-fluid px-3 px-sm-4 mt-3 mb-4"  id="editImage" style="width: 25rem;" src="/<%= product.image %>" alt="<%= product.name %>" title="<%= product.name %>">
                    </div>
                    <form>
                      <div class="form-group">
                        <input type="hidden" id="uploadcsrf" name="_csrf" value="<%= csrfToken %>">
                        <input type="file" class="form-control-file" id="imageUpload" name="uploads" >
                      </div>
                    </form>
                  
                  </div>
                  
                </div>
               
                
      
              </div>
              
             
  

            </div>
           
            



          </div>

       

         
         
        </div>
        
        
      </section>

      <section>
        <div class="row">
          <div class="col-md-6">
            <div class="float-left">
              <h1 class="h3 mb-4 text-gray-800">

                <button  type="button" class="btn btn-danger deleteProduct" data-toggle="modal" data-target="#deleteModal"> 
                  <strong> Delete Product</strong>  <i class="fa fa-trash" aria-hidden="true" style="font-size:18px"></i>
                </button>
              
              </h1>
          </div>
          </div>
          
        <div class="col-md-6">
          <div class="float-right">
            <h1 class="h3 mb-4 text-gray-800">
              <form method="POST" action="/admin/view-products" >
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-primary allProduct">
                <strong> All Product</strong> <i class="fa fa-angle-double-right" style="font-size:18px"></i>
              </button>
            </form>
            </h1>
        </div>
        </div>
        

        </div>
      </section>
      

      



    </div>
    <!-- /.container-fluid -->
    <!-- The Modal -->
<div class="modal" id="deleteModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Delete Product</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form method="POST" action="/admin/deleteSingle/<%=product._id%>" >
          <p><strong>Are you sure you want to delete this product ??</strong> </p>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="modal-footer">
          <button type="submit" class="btn btn-success  dontDelProduct" data-dismiss="modal">No</button>
          <button type="submit" class="btn btn-danger deleteProduct" >Yess, delete</button><% //onclick send axios post request %>
        </div>
      </form>
      </div>

      <!-- Modal footer -->
     

    </div>
  </div>
</div>


  </div>
  <!-- End of Main Content -->

<%- include('includes/admin_footer') %>
