  <%- include('includes/admin_header') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>

     
        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Content Row -->
          <div class="row">

            <div class="col-mx-auto mt-4 mb-" >
             
                  <h1 class="h3 mb-4 text-gray-800">
                   
                      
                    <button type="submit" class="btn btn-primary addService">
                      <strong> Add Service</strong> <i class="fa fa-plus-circle" style="font-size:18px"></i>
                    </button>
                 
                  </h1>
             
              
            
          </div>

          <div class="row allServiceBox" >
            <% for( let index = 0; index < services.length; index++ ) { %>
              <div class="col-md-3 mb-4" >
                <!-- Illustrations -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">  <%=services[index].name.toUpperCase() %> </h6>
                  </div>
                  <div class="card-body">
                    <div class="text-center">
                      <img class="img-fluid px-3 px-sm-4 mt-3 mb-4"  src="/<%- services[index].image %>" alt="">
                    </div>
                    <p><%=services[index].desc %></p>
                    
                  </div>
                </div>
              </div>
            <% } %>
          </div>

          

          <div  class=" mt-4 row addServiceForm ">
            <div class="col-md-12">
                <form class="" method="POST" action="/admin/create-service?_csrf=<%= csrfToken %>" enctype="multipart/form-data" > <!--d-none-->
                  <div class="form-row">
                    <div class="form-group col-md-12">
                      <label for="prouctName"><strong> Service Name</strong></label>
                      <input type="text" name="name" class="form-control name" id="name" placeholder="Enter New Farm Service Name" required>
                    </div>
                    
                  </div>
               
                  <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="uploads">
                        <label class="custom-file-label" for="customFile">Choose image file</label>
                      </div>
                </div>
                  <div class="form-group">
                      <label for="desc"><strong> Service Description</strong> </label>
                      <textarea  name="desc" class="form-control desc" required id="desc" rows="3"></textarea>
                    </div>
                  <button type="submit" class="btn btn-primary">Upload  <i class="fa fa-paper-plane" aria-hidden="true"></i> </button> 
                </form>
            </div>            

          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    <%- include('includes/admin_footer') %>
