  <script>

    // create global filter
Vue.filter('snippet', (val)=>{
  if(!val || typeof(val) != 'string') {
    return ''
  }
  val = val.slice(0,100)
  return val 
})  
    // creaee new vvue instance
new Vue({
    el: '.indexArea',
    data: {
      products:[],
        info:null,
        siteData: null
    },
    created () {

      fetch('api/v1/products/viewAllProducts')
      .then((resp) => resp.json()) 
      .then(doc => {
        this.products = [doc[0], doc[1], doc[2]];
        console.log(this.products)
      })

      fetch('/api/v1/services/viewAllServices')
      .then((resp) => resp.json()) 
      .then(data => (this.info = [data[0], data[1], data[2]]))

  }
})

new Vue({
  el: '#aboutArea',
    data: {
          about:null,
    },
    created () {
      fetch('api/v1/site-profile/viewAllSitedata')
      .then((resp) => resp.json()) 
      .then(data => {
        data.forEach(doc => {
            this.about = doc.about;
            // console.log(doc.about)
        });
      })
    }
})

new Vue({
  el: '#contact-form-area',
    data: {
          name:null,
          email:null,
          phone: null,
          subject: null,
          message:null,
          feedbackSucc: null,
          feedbackErr: null
    },
    methods: {
     async sendMessage() {
      const messageToSend = {
        name : this.name,
        email: this.email,
        phone: this.phone,
        subject: this.subject,
        message: this.message
      }

      await fetch('api/v1/site-profile/sendmessage', 
      {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json' 
          },
          credentials: 'include',
          body: JSON.stringify(messageToSend)
      }).then(() => {
        this.feedbackSucc = true
      }).catch((err)=>{
        this.feedbackErr = true
      })
      

     }
    }
})
  </script>
  
 